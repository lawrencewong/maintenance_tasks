<p id="notice"><%= notice %></p>

<h1>Maintenance Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task %></td>
        <td>
          <%= button_to 'Run', runs_path, params: { run: { task_name: task.name } }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
